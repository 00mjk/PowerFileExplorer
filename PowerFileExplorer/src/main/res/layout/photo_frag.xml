			<View
				android:id="@+id/leftRecycler"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
			/>-->
			
			<com.l4digital.fastscroll.FastScrollRecyclerView
				android:id="@+id/thumbnails_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:bubbleColor="#80ff0000"
				app:bubbleTextColor="#ffffffff"
				app:handleColor="#ff808080"
				app:trackColor="#ffbbbbbb"
				app:hideScrollbar="true"
				app:showTrack="true" 
				app:center="true"
				app:vertical="false"
				android:orientation="horizontal"
				android:layout_gravity="bottom"
			/>
			<!--<View
				android:id="@+id/rightRecycler"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
			/>
		</LinearLayout>
	</HorizontalScrollView>-->

